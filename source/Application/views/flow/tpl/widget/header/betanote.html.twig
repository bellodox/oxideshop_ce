{% if (oView.isRCVersion()) %}
    {% set release_name = 'RC' %}
{% else %}
    {% set release_name = 'BETA' %}
{% endif %}
<div id="betaNote">
    <div class="notify">
        {{ translate({ ident: 'BETA_NOTE' }) }}
        {{ translate({ ident: 'BETA_NOTE_RELEASE_' ~ release_name }) }}
        {{ oxcmp_shop.getShopVersion()|regex_replace("/[0-9]+\.[0-9]+\.[0-9]+([_a-zA-Z]+)? / ", "") }}
        {{ translate({ ident: 'BETA_NOTE_MIDDLE' }) }}
        {{ oxcmp_shop.getShopVersion()|regex_replace("/[_a-zA-Z]+[0-9]+ / ", "") }}
        {{ translate({ ident: 'BETA_NOTE_FAQ' }) }}
        <span class="dismiss"><a href="#" title="{{ translate({ ident: 'BETA_NOTE_CLOSE' }) }}">x</a></span>
    </div>
</div>
