{% capture append = "oxidBlock_content" %}
    {% set template_title = "NEWSLETTER_SETTINGS"|translate %}
    {% if oView.getSubscriptionStatus() != 0 %}
        {% if oView.getSubscriptionStatus() == 1 %}
            <div class="alert alert-success">{{ translate({ ident: "MESSAGE_NEWSLETTER_SUBSCRIPTION_SUCCESS" }) }}</div>
        {% else %}
            <div class="alert alert-success">{{ translate({ ident: "MESSAGE_NEWSLETTER_SUBSCRIPTION_CANCELED" }) }}</div>
        {% endif %}
    {% endif %}

    <h1 id="newsletterSettingsHeader" class="page-header">{{ translate({ ident: "NEWSLETTER_SETTINGS" }) }}</h1>

    {% include "form/account_newsletter.html.twig" %}

    {{ insert_tracker({title: template_title}) }}
{% endcapture %}
{% capture append = "oxidBlock_sidebar" %}
    {% include "page/account/inc/account_menu.html.twig" with {active_link: "newsletter"} %}
{% endcapture %}
{% include "layout/page.html.twig" with {sidebar: "Left"} %}