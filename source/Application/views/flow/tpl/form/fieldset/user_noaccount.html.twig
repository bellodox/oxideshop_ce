<div class="form-group {% if aErrors.oxuser__oxusername %}oxInValid{% endif %}">
    {% block user_noaccount_email %}
        <label class="control-label col-lg-3 req">{{ translate({ ident: "EMAIL_ADDRESS" }) }}</label>
        <div class="col-lg-9">
            <input id="userLoginName" class="form-control js-oxValidate js-oxValidate_notEmpty js-oxValidate_email" type="email" name="lgn_usr" value="{{ oView.getActiveUsername() }}">
            <div class="help-block">
                {% include "message/inputvalidation.html.twig" with {aErrors: aErrors.oxuser__oxusername} %}
            </div>
        </div>
    {% endblock %}
</div>
<div class="form-group">
    {% block user_noaccount_newsletter %}
        <div class="col-lg-9 col-lg-offset-3">
            <input type="hidden" name="blnewssubscribed" value="0">
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="blnewssubscribed" value="1" {% if oView.isNewsSubscribed() %}checked{% endif %}> {{ translate({ ident: "NEWSLETTER_SUBSCRIPTION" }) }}
                </label>
            </div>
            <span class="help-block">{{ translate({ ident: "MESSAGE_NEWSLETTER_SUBSCRIPTION" }) }}</span>
        </div>
    {% endblock %}
</div>