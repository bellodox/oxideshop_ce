{% include "headitem.html.twig" with {title: "GENERAL_ADMIN_TITLE"|translate} %}

{% if readonly %}
    {% set readonly = "readonly disabled" %}
{% else %}
    {% set readonly = "" %}
{% endif %}

<form name="transfer" id="transfer" action="{{ oViewConf.getSelfLink()|raw }}" method="post">
    {{ oViewConf.getHiddenSid()|raw }}
    <input type="hidden" name="oxid" value="{{ oxid }}">
    <input type="hidden" name="cl" value="newsletter_selection">
    <input type="hidden" name="editlanguage" value="{{ editlanguage }}">
</form>

<form name="myedit" id="myedit" action="{{ oViewConf.getSelfLink()|raw }}" method="post">
    {{ oViewConf.getHiddenSid()|raw }}
    <input type="hidden" name="cl" value="newsletter_selection">
    <input type="hidden" name="fnc" value="">
    <input type="hidden" name="oxid" value="{{ oxid }}">
    <input type="hidden" name="editval[oxnewsletter__oxid]" value="{{ oxid }}">
    <table cellspacing="0" cellpadding="0" border="0" height="100%" width="100%">
        <tr>
            <td valign="top" class="edittext">
                <input {{ readonly }} type="button" value="{{ translate({ ident: "GENERAL_ASSIGNGROUPS" }) }}" class="edittext" onclick="JavaScript:showDialog('&cl=newsletter_selection&aoc=1&oxid={{ oxid }}');">
            </td>

            <!-- Anfang rechte Seite -->
            <td valign="top" class="edittext" align="left">
                <br>
                <b>{{ translate({ ident: "NEWSLETTER_SELECTION_SELMAILRESAVER" }) }}:</b> <b id="_newsletterusercnt">{{ oView.getUserCount() }}</b>
                <br><br>
                <div id="_newsletterbtn"{% if not oView.getUserCount() %}style="display:none"{% endif %}>
                    <a href="{{ oViewConf.getSelfLink()|raw }}&amp;cl=newsletter_send&amp;oxid={{ oxid }}&amp;iStart=0" class="edittext" target="list" {% if readonly %}onclick="JavaScript:return false;"{% endif %}><b>{{ translate({ ident: "NEWSLETTER_SELECTION_SENDNEWS" }) }}</b></a>
                </div>
            </td>
        </tr>
    </table>
</form>

