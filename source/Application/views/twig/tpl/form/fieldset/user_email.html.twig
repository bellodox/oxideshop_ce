<div class="form-group{% if aErrors.oxuser__oxusername %} oxInValid{% endif %}">
    <label class="req control-label col-lg-3">{{ translate({ ident: "EMAIL_ADDRESS" }) }}</label>
    <div class="col-lg-9">
        <input class="js-oxValidate js-oxValidate_notEmpty js-oxValidate_email oxValidate_enterPass oxValidate_enterPassTarget[oxValidate_pwd] form-control" type="text" name="invadr[oxuser__oxusername]" value="{% if isset( invadr.oxuser__oxusername ) %}{{ invadr.oxuser__oxusername }}{% else %}{{ oxcmp_user.oxuser__oxusername.value }}{% endif %}" size="37">
        {% include "message/inputvalidation.html.twig" with {aErrors: aErrors.oxuser__oxusername} %}
        <div class="help-block"></div>
    </div>
</div>

{% if oxcmp_user.oxuser__oxpassword.value %}
    <div class="oxValidate_pwd form-group{% if aErrors.oxuser__oxpassword %} oxInValid{% endif %}" {% if not aErrors.oxuser__oxpassword %}style="display:none;"{% endif %}>
        <label class="req control-label col-lg-3">{{ translate({ ident: "PASSWORD" }) }}</label>
        <div class="col-lg-9">
            <input class="js-oxValidate js-oxValidate_notEmpty form-control" type="password" size="37" name="user_password">
            {% include "message/inputvalidation.html.twig" with {aErrors: aErrors.oxuser__oxpassword} %}
            <div class="help-block"></div>
        </div>
    </div>
{% endif %}